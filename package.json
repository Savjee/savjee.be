{
  "description": "Source of savjee.be, a static website generated by Eleventy.",
  "name": "savjee.be",
  "homepage": "https://github.com/Savjee/savjee.be",
  "bugs": "https://github.com/Savjee/savjee.be/issues/",
  "author": {
    "name": "Xavier Decuyper",
    "email": "hi@savjee.be",
    "url": "https://savjee.be"
  },
  "private": true,
  "scripts": {
    "start": "npm run start:eleventy & npm run start:webpack",
    "start:eleventy": "eleventy --serve",
    "start:webpack": "webpack --mode development --watch",
    "start:cf": "npx wrangler pages dev -- npm run start",
    "build": "npm run build:webpack && npm run build:eleventy",
    "build:eleventy": "ELEVENTY_PRODUCTION=true eleventy",
    "build:webpack": "webpack --mode production",
    "build:images": "npx ts-node src/build/image_pipeline.ts",
    "lint:css": "npx stylelint '**/*.scss'",
    "lint:js": "npx eslint \"**/*.{js,ts}\"",
    "lint:brokenlinks": "npx blcl ./_site/ -ro --exclude-external"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.0.0",
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@types/sharp": "^0.30.5",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "babel-loader": "^8.2.3",
    "bootstrap": "^4.6.0",
    "broken-link-checker-local": "^0.2.1",
    "eleventy-plugin-bibtex": "^0.1.1",
    "eslint": "^8.24.0",
    "fast-glob": "^3.2.12",
    "file-loader": "^6.2.0",
    "html-minifier": "^4.0.0",
    "image-size": "^1.0.0",
    "instant.page": "^5.1.0",
    "markdown-it": "^13.0.1",
    "markdown-it-anchor": "^8.4.1",
    "markdown-it-link-attributes": "^4.0.0",
    "markdown-it-table-of-contents": "^0.6.0",
    "prism-themes": "^1.9.0",
    "sass": "^1.55.0",
    "sass-loader": "^13.0.0",
    "sharp": "^0.30.7",
    "stylelint": "^14.13.0",
    "stylelint-config-standard-scss": "^5.0.0",
    "ts-node": "^10.4.0",
    "webpack": "^5.60.0",
    "webpack-cli": "^4.9.1"
  },
  "dependencies": {
    "eleventy-plugin-toc": "^1.1.5"
  }
}
