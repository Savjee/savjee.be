title: "Newsletter"
---

<div>
    <div class="grid grid-cols-2 gap-8 items-center">
        <p>Get your a monthly dose of science and technology news.
            <br>Check out the past issues here, 
            and signup if you want your curiosity tickled every month ðŸ˜‰</p>
        
        <div>
            {% include "components/newsletter-box.html", noDescription: true %}
        </div>
    </div>


    {% assign newslettersByYear = collections.newsletter | groupByYear %}
    {% for yearObj in newslettersByYear reversed %}
        <h3 class="text-2xl font-bold pb-4 pt-16">{{ yearObj.year }}</h3>

        {% for newsletter in yearObj.posts reversed %}
            <p class="py-3 leading-tight">
                <a href="{{newsletter.url}}" class="no-underline hover:underline">{{newsletter.data.title}}</a><br>
                <span class="text-savjeelightgrey3 text-sm">Sent on {{newsletter.date | date: "%B %e, %Y" }}</span>
            </p>
            <hr>
        {% endfor %}
    {% endfor %}
</div>